<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true">
    <property resource="application.properties"/>
	
    <appender name="app"  class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${logLevel}</level>
        </filter>
        <file>${logRoot}/CommonUtils.log</file>
        
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">  
        	<pattern>[%date{yyyy-MM-dd HH:mm:ss}][%-4level][%file:%line][%thread] dstTraceId:[]dstTraceId:[] %msg%n</pattern>  
    	</encoder>  
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">  
        	<!-- rollover daily -->  
        	<fileNamePattern>${logRoot}/CommonUtils-%d{yyyyMMdd}-%i.log</fileNamePattern>  
        	<!-- each file should be at most 100MB, keep 60 days worth of history, but at most 20GB -->  
        	<maxFileSize>3MB</maxFileSize>  
        	<maxHistory>30</maxHistory>  
    	</rollingPolicy>  
    </appender>
	
    <!-- 控制台输出  -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file] %msg%n</pattern>
        </encoder>
    </appender>
	
    <root>
        <level value="${logLevel}" />
        <appender-ref ref="${logDirection}" />
    </root>
</configuration>
